<%= turbo_frame_tag "demo-#{params[:id]}" do %>
  <%# State is held in session for this demo %>
  <%= session[:count].to_i %>

  <%# The turbo_reflex data attribute instructs the client to perform a reflex when clicked %>
  <%= button_tag "Basic Button",
    data: { turbo_reflex: "CounterReflex#increment" } %>
<% end %>
